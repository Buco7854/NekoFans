<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.1.2</Version>
    <TargetFramework>net6.0-windows</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <Platforms>x64</Platforms>
    <PlatformTarget>x64</PlatformTarget>
    <OutputType>Library</OutputType>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <PreserveCompilationContext>false</PreserveCompilationContext>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <OutputPath Condition="'$(OS)' == 'Windows_NT'">$(AppData)\XIVLauncher\devPlugins\Neko</OutputPath>
    <OutputPath Condition="'$(OS)' == 'Unix'">$(HOME)/.xlcore/devPlugins/Neko</OutputPath>
  </PropertyGroup>

  <!-- Info for the Dalamud Packer -->
  <ProjectExtensions>
    <DalamudPlugin>
      <ApiLevel>7</ApiLevel>
      <Author>Meisterlala</Author>
      <Name>Neko Fans</Name>
      <Punchline>Frustrated in a dungeon? Look at a cute cat girl!</Punchline>
      <Description>Shows you an image of a random neko character. Click on the image to view the next one.\nMultiple Image APIs are supported, allowing you to look at Catboys, Waifus, Cats, Dogs and more.\nWarning: You might see naughty images</Description>
      <IconUrl>https://raw.githubusercontent.com/Meisterlala/NekoFans/master/icon.png</IconUrl>
      <Tags>
        <Tag>anime</Tag>
        <Tag>neko</Tag>
        <Tag>waifu</Tag>
        <Tag>miqote</Tag>
        <Tag>image</Tag>
      </Tags>
      <CategoryTags>
        <Tag>UI</Tag>
      </CategoryTags>
      <Hidden>False</Hidden>
    </DalamudPlugin>
  </ProjectExtensions>

  <!-- Set DalamudLibPath based on OS -->
  <PropertyGroup>
    <DalamudLibPath Condition="'$(OS)' == 'Windows_NT'">$(AppData)\XIVLauncher\addon\Hooks\dev\</DalamudLibPath>
    <DalamudLibPath Condition="'$(OS)' == 'Unix'">$(HOME)/.xlcore/dalamud/Hooks/dev/</DalamudLibPath>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
  </PropertyGroup>

  <!-- Load DLLs included with Dalamud -->
  <ItemGroup>
    <Reference Include="Dalamud">
      <HintPath>$(DalamudLibPath)Dalamud.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="ImGui.NET">
      <HintPath>$(DalamudLibPath)ImGui.NET.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="ImGuiScene">
      <HintPath>$(DalamudLibPath)ImGuiScene.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
   
  <!-- Needed for creating a .zip -->
  <ItemGroup> 
    <PackageReference Include="DalamudPackager" Version="2.1.8" /> 
  </ItemGroup>
 
  <!-- Manifest -->
  <ItemGroup>
    <None Include="Neko.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Embedded Resources -->
  <ItemGroup>
    <EmbeddedResource Include="resources/error.jpg" />
  </ItemGroup>

  <!-- Used to manipulate Clipboard -->
  <ItemGroup>
    <PackageReference Include="TextCopy"> 
        <Version>6.1.0</Version>
        <GeneratePathProperty>true</GeneratePathProperty>
      </PackageReference>
  </ItemGroup>
</Project>
