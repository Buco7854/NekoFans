      VersionComponents="3"
    />
  </Target>  
  -->
  <ItemGroup>
    <None Include="Neko.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="resources/error.jpg" />
  </ItemGroup>
</Project>
